<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Comparison">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolbarComparison"
            layout="@layout/toolbar_savings"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="8"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_margin="5dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/my_textview"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:id="@+id/ComPickdateId"
                        />

                    <Button
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:textAllCaps="false"
                        android:text="Pick\nDate"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/rounded_button"
                        android:id="@+id/CombtnPickdateId"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:textAllCaps="false"
                        android:text="Search\nDay"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:background="@drawable/rounded_button1"
                        android:id="@+id/CombtnDayId"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="2dp"
                        android:text="Search\nMonth"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:background="@drawable/rounded_button1"
                        android:id="@+id/CombtnMonthId"
                        />

                    <Button
                        android:layout_width="50dp"
                        android:layout_height="46dp"
                        android:textAllCaps="false"
                        android:layout_marginLeft="2dp"
                        android:text="Search\nYear"
                        android:textSize="12sp"
                        android:textColor="#ffff"
                        android:background="@drawable/rounded_button1"
                        android:id="@+id/CombtnYearId"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</RelativeLayout>